<% bookCoverClass = locals.large ? 'book-cover-large' : '' %>
<% bookGridClass = locals.large ? 'book-grid-large' : '' %> 
<% bookClickableClass = locals.isClickable ? 'clickable' : '' %> 

<div class="book-grid <%= bookGridClass %> ">
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %>">
            <img class="book-cover <%= bookCoverClass %> <%= bookClickableClass %> " src="<%= book.coverImagePath %> ">
        </a>
    <% }) %> 
</div>